<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android = "http://schemas.android.com/apk/res/android"
            android:layout_width = "match_parent"
            android:layout_height = "match_parent"
            android:background = "@android:color/black">
    
    <GridLayout
        xmlns:tools = "http://schemas.android.com/tools"
        android:id = "@+id/activity_videoroom"
        android:layout_width = "match_parent"
        android:layout_height = "match_parent"
        android:columnCount = "2"
        android:keepScreenOn = "true"
        android:rowCount = "3"
        tools:context = "com.baidu.rtc.videoroom.RoomActivity"
        >
        
        
        <com.baidu.rtc.RTCVideoView
            android:id = "@+id/remote_rtc_video_view"
            android:layout_width = "160dp"
            android:layout_height = "206dp" />
        
        <com.baidu.rtc.RTCVideoView
            android:id = "@+id/remote_rtc_video_view1"
            android:layout_width = "160dp"
            android:layout_height = "206dp" />
        
        <com.baidu.rtc.RTCVideoView
            android:id = "@+id/remote_rtc_video_view2"
            android:layout_width = "160dp"
            android:layout_height = "206dp" />
        
        
        <com.baidu.rtc.RTCVideoView
            android:id = "@+id/remote_rtc_video_view3"
            android:layout_width = "160dp"
            android:layout_height = "206dp" />
        
        <com.baidu.rtc.RTCVideoView
            android:id = "@+id/remote_rtc_video_view4"
            android:layout_width = "160dp"
            android:layout_height = "206dp" />
        
        <com.baidu.rtc.RTCVideoView
            android:id = "@+id/local_rtc_video_view"
            android:layout_width = "160dp"
            android:layout_height = "206dp" />
    
    </GridLayout>
</ScrollView>

